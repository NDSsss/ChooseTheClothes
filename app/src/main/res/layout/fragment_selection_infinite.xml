<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.example.nds.choosetheclothe.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
            android:id="@+id/hicvp_infinite_scrolling_tshirt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:icvp_center_page_scale_offset="10dp"
            app:icvp_max_page_scale="0.8"
            app:icvp_medium_scaled="false"
            app:icvp_min_page_scale="0.55"
            app:icvp_min_page_scale_offset="5dp"
            app:icvp_scroll_duration="1000" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_fragment_infinite_scrolling_tshirt_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.example.nds.choosetheclothe.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
            android:id="@+id/hicvp_infinite_scrolling_pans"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:icvp_center_page_scale_offset="10dp"
            app:icvp_max_page_scale="0.8"
            app:icvp_medium_scaled="false"
            app:icvp_min_page_scale="0.55"
            app:icvp_min_page_scale_offset="5dp"
            app:icvp_scroll_duration="1000" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_fragment_infinite_scrolling_pans_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.example.nds.choosetheclothe.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
            android:id="@+id/hicvp_infinite_scrolling_shoes"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:icvp_center_page_scale_offset="10dp"
            app:icvp_max_page_scale="0.8"
            app:icvp_medium_scaled="false"
            app:icvp_min_page_scale="0.55"
            app:icvp_min_page_scale_offset="5dp"
            app:icvp_scroll_duration="1000" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_fragment_infinite_scrolling_shoes_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>